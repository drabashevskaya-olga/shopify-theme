<style>
  .what-includes-buttons
  {
  display:flex;
  }
  
  .read-reviews
  {
   margin-left:auto; 
  }
  
</style>



{% if product.metafields.whats_included.list_item != blank %}
<div class="page-width" id="whats-include">
  <div class="section-title-div">
  <h2 class="section-title">{{ section.settings.heading }}</h2>
  
  {{ product.metafields.whats_included.list_item }}  
    
  </div>
  
  <div class="desktop-image hideMobile">
    
     {%- if product.metafields.whats_included.image != blank -%}
                <img
                  srcset="{%- if product.metafields.whats_included.image.width >= 550 -%}{{ product.metafields.whats_included.image | img_url: '550x' }} 550w,{%- endif -%}
                    {%- if product.metafields.whats_included.image.width >= 720 -%}{{ product.metafields.whats_included.image | img_url: '720x' }} 720w,{%- endif -%}
                    {%- if product.metafields.whats_included.image.width >= 990 -%}{{ product.metafields.whats_included.image| img_url: '990x' }} 990w,{%- endif -%}
                    {%- if product.metafields.whats_included.image.width >= 1100 -%}{{ product.metafields.whats_included.image | img_url: '1100x' }} 1100w,{%- endif -%}
                    {%- if product.metafields.whats_included.image.width >= 1500 -%}{{ product.metafields.whats_included.image | img_url: '1500x' }} 1500w,{%- endif -%}
                    {%- if product.metafields.whats_included.image.width >= 2200 -%}{{ product.metafields.whats_included.image | img_url: '2200x' }} 2200w,{%- endif -%}
                    {%- if product.metafields.whats_included.image.width >= 3000 -%}{{ product.metafields.whats_included.image | img_url: '3000x' }} 3000w,{%- endif -%}"
                  src="{{ product.metafields.whats_included.image | img_url: 'master' }}"
                  sizes="(min-width: {{ settings.page_width }}px) {% if section.blocks.size == 1 %}calc({{ settings.page_width }}px - 100px){% else %}{{ settings.page_width | minus: 100 | times: 0.67 | round }}px{% endif %}, (min-width: 750px){% if section.blocks.size == 1 %} calc(100vw - 100px){% else %} 500px{% endif %}, calc(100vw - 30px)"
                  alt="{{ product.metafields.whats_included.image.alt | escape }}"
                  loading="lazy"
                  width="{{ product.metafields.whats_included.image.width }}"
                  height="{{ product.metafields.whats_included.image.height }}"
                  class="collage-card__image"
                >
             
              {%- endif -%}
    
  </div>
  
   <div class="desktop-image hideDesktop">
    
     {%- if product.metafields.whats_included.image_mobile != blank -%}
                <img
                  srcset="{%- if product.metafields.whats_included.image_mobile.width >= 550 -%}{{ product.metafields.whats_included.image | img_url: '550x' }} 550w,{%- endif -%}
                    {%- if product.metafields.whats_included.image_mobile.width >= 720 -%}{{ product.metafields.whats_included.image_mobile | img_url: '720x' }} 720w,{%- endif -%}
                    {%- if product.metafields.whats_included.image_mobile.width >= 990 -%}{{ product.metafields.whats_included.image_mobile| img_url: '990x' }} 990w,{%- endif -%}
                    {%- if product.metafields.whats_included.image_mobile.width >= 1100 -%}{{ product.metafields.whats_included.image_mobile | img_url: '1100x' }} 1100w,{%- endif -%}
                    {%- if product.metafields.whats_included.image_mobile.width >= 1500 -%}{{ product.metafields.whats_included.image_mobile | img_url: '1500x' }} 1500w,{%- endif -%}
                    {%- if product.metafields.whats_included.image_mobile.width >= 2200 -%}{{ product.metafields.whats_included.image_mobile | img_url: '2200x' }} 2200w,{%- endif -%}
                    {%- if product.metafields.whats_included.image_mobile.width >= 3000 -%}{{ product.metafields.whats_included.image_mobile | img_url: '3000x' }} 3000w,{%- endif -%}"
                  src="{{ product.metafields.whats_included.image_mobile | img_url: 'master' }}"
                  sizes="(min-width: {{ settings.page_width }}px) {% if section.blocks.size == 1 %}calc({{ settings.page_width }}px - 100px){% else %}{{ settings.page_width | minus: 100 | times: 0.67 | round }}px{% endif %}, (min-width: 750px){% if section.blocks.size == 1 %} calc(100vw - 100px){% else %} 500px{% endif %}, calc(100vw - 30px)"
                  alt="{{ product.metafields.whats_included.image_mobile.alt | escape }}"
                  loading="lazy"
                  width="{{ product.metafields.whats_included.image_mobile.width }}"
                  height="{{ product.metafields.whats_included.image_mobile.height }}"
                  class="collage-card__image"
                >
           
              {%- endif -%}
    
  </div>
  
  
  <div class="what-includes-buttons hideMobile">
    
    {% if section.settings.show_button %}
  <div class="buy-now-button">
                {%- form 'product', product, id: product_form_id, class: 'form', novalidate: 'novalidate', data-type: 'add-to-cart-form' -%}
                  <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                      {{ form | payment_button }}
                {%- endform -%}
    </div>
    {% endif %}
  <div class="read-reviews">
     <a href="#reviews" class="button button--secondary">Read Reviews
   

    </a>
    
    
  </div>
  </div>
</div>
{% endif %}






{% schema %}
  {
    "name": "Product WHAT’S INCLUDED?",
    "settings": [
                {
                  "type": "text",
                  "id": "heading",
                  "label": "Heading",
                  "default": "WHAT’S INCLUDED?"
                },
                {
                  "type": "checkbox",
                  "id": "show_button",
                  "label": "Show Buy Now Button",
                  "default": true
                }

],
"presets": [{
        "name": "Product WHAT’S INCLUDED?"
      }]
  }
{% endschema %}

