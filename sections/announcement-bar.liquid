<script>
  //sticky header start
  $(document).ready(function() {
    $('.min_top').removeClass("sticky");
    //PopUp MSG
    $(document).on('click', '.announcement_popup_close', function () {
      $(".announcement_popup").hide();
      $('body').removeClass('current_opend_popup_cls');
    });
    
    
      $(window).on("load resize scroll",function(e){
      if ($(window).width() < 990 ) {
        $(document).on('click', '.image_svg_text', function () {
          $(".announcement_popup.mobile").css('display','none');
          var data_target = $(this).attr('data_target');
          $(data_target+'_mobile').css('display','block');

        });
        
        $('#announcement-bar>.page-width').slick({
          slidesToShow: 1,
          autoplay: true,
          dots: false,
          slidesToScroll: 1,
          arrows: true,
          prevArrow: '<div class="slick-prev"><i class="fa fa-angle-left" aria-hidden="true"></i></div>',
          nextArrow: '<div class="slick-next"><i class="fa fa-angle-right" aria-hidden="true"></i></div>'
        });
      }else{
        $(document).on('click', '.image_svg_text', function () {
          $(".announcement_popup.desktop").css('display','none');
          var data_target = $(this).attr('data_target');
         
          $(data_target+'_desktop').css('display','block');
          $('body').addClass('current_opend_popup_cls');

        });
        $('#announcement-bar>.page-width').slick('unslick');
        
      }
    });
  });
  $(window).scroll(function() {
    if ($(this).scrollTop() > 1){  
      $('.min_top').addClass("sticky");
    }
    else{
      $('.min_top').removeClass("sticky");
    }
  });
</script>


