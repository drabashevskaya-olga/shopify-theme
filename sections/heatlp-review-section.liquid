<section class="review-section">
        <div class="container">
          {% if section.settings.heading != blank %}
            <h2 class="center-h2">{{ section.settings.heading }}</h2>
          {% endif %}
          {% if section.settings.subheading != blank %}
            <div class="sub-heading _2">{{ section.settings.subheading }}
            </div>
          {% endif %}
            <div class="inner_review_section " data-aos="fade-right">
                    <div class="inner_section_re">
                      {% for block in section.blocks %}
                        <div class="wrapper_review">
                          {% if block.settings.review_image != blank and block.settings.review_video == blank %}
                            <div class="img_section_left">
                                <div style="background-image:url({{ block.settings.review_image | img_url:'master' }}); display:block !important" class="img_section_inner"></div>
                            </div>
                          {% endif %}
                          {% if block.settings.review_video != blank %}
                            <div class="img_section_left">
                                <video playsinline="" autoplay="" muted="" loop=""
                                    src="{{ block.settings.review_video }}"></video>
                            </div>
                          {% endif %}
                            <div class="rev-content-div">
                              {% if block.settings.author_name != blank %}
                                <div class="name-text">{{ block.settings.author_name }}
                                </div>
                              {% endif %}
                              {% if block.settings.review_stars != blank and block.settings.review_stars == 1 %}
                                <div class="review-stars text-span-11">★</div>
                              {% endif %}
                              {% if block.settings.review_stars != blank and block.settings.review_stars == 2 %}
                                <div class="review-stars text-span-11">★★</div>
                              {% endif %}
                              {% if block.settings.review_stars != blank and block.settings.review_stars == 3 %}
                                <div class="review-stars text-span-11">★★★</div>
                              {% endif %}
                              {% if block.settings.review_stars != blank and block.settings.review_stars == 4 %}
                                <div class="review-stars text-span-11">★★★★</div>
                              {% endif %}
                              {% if block.settings.review_stars != blank and block.settings.review_stars == 5 %}
                                <div class="review-stars text-span-11">★★★★★</div>
                              {% endif %}
                              {% if block.settings.heading != blank %}
                                <div class="review-text">
                                    <strong class="bold-text-5">{{ block.settings.heading }}</strong>
                                    <br>
                                </div>
                              {% endif %}
                              {% if block.settings.paragraph != blank %}
                                <p class="review-para">{{ block.settings.paragraph }}
                                </p>
                              {% endif %}
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
        </div>
    </section>


{% schema %}
  {
    "name": "Reviews",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Subheading"
      }
    ],
     "blocks": [
     {
       "name": "Review",
       "type": "review",
       "settings": [
         {
           "type": "image_picker",
           "id": "review_image",
           "label": "Image"
         },
         {
           "type":"url",
           "id": "review_video",
           "label": "Video"
         },
         {
           "type": "text",
           "id": "author_name",
           "label": "Author Name"
         },
         {
           "type": "range",
           "id": "review_stars",
           "min": 1,
           "max": 5,
           "step": 1,
           "label": "Review Stars",
           "default": 1
        },
        {
           "type": "text",
           "id": "heading",
           "label": "Heading"
        },
        {
           "type": "text",
           "id": "paragraph",
           "label": "Paragraph"
        }
       ]
     }
  ]
  }
{% endschema %}

