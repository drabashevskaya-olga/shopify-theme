{{ 'community.css' | asset_url | stylesheet_tag }}

<section class="section-community">
  <div class="page-width">
    <div class="community-wapper">
      <div class="community-data">
        <h2>{{section.settings.heading}}</h2>
        {{section.settings.description}}
      </div>
      <div class="comunnity-image-item">
        <div class="community-item">
          <a href="{{section.settings.thumbnail_url1}}">
            <img src="{{section.settings.image_1 | img_url: 'master'}}">
            <div class="community-title">
              <h2>{{section.settings.heading1}}</h2>
            </div>
          </a>
        </div>
        <div class="community-item">
          <a href="{{section.settings.thumbnail_url2}}">
            <img src="{{section.settings.image_2 | img_url: 'master'}}">
            <div class="community-title">
              <h2>{{section.settings.heading2}}</h2>
            </div>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

