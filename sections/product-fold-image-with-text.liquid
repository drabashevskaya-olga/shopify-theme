{{ 'component-image-with-text.css' | asset_url | stylesheet_tag }}


{% if product.metafields.product_fold.image != blank %}

<div class="image-with-text {{section.settings.custom_class}} page-width" id="specification">
  <div class="image-with-text__grid color-{{ section.settings.color_scheme }}{% if section.settings.layout == 'text_first' %} image-with-text__grid--reverse{% endif %} grid grid--gapless grid--1-col grid--2-col-tablet">
    
    <div class="grid__item">
      <div class="image-with-text__media media image-with-text__media--{{ section.settings.height }}"
        {% if section.settings.height == 'adapt' %} {% endif %}
      >
        
          <img
            src="{{ product.metafields.product_fold.image | img_url: '200x' }}"
            sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
            alt="{{ product.metafields.product_fold.image.alt | escape }}"
            loading="lazy"
            width="{{ product.metafields.product_fold.image.width }}"
            height="{{ product.metafields.product_fold.image.height }}"
               class="hideMobile"
          >
        
        <img
            src="{{ product.metafields.product_fold.image_mobile | img_url: '300x' }}"
            sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
            alt="{{ product.metafields.product_fold.image_mobile.alt | escape }}"
            loading="lazy"
            width="{{ product.metafields.product_fold.image_mobile.width }}"
            height="{{ product.metafields.product_fold.image_mobile.height }}"
             class="hideDesktop"
          >
      </div>
    </div>
    
    <div class="grid__item">
      <div class="image-with-text__content image-with-text__content--{{ section.settings.height }}">
              {{ product.metafields.product_fold.heading_and_text }}
      </div>
    </div>
  
  </div>
</div>

{% endif %}

