<section class="benefits-section">
        <div class="container">
            <div class="benefits-section_inner">
              {% if section.settings.heading != blank %}
                <h2 class="center-h2">{{ section.settings.heading }}</h2>
              {% endif %}
              {% if section.settings.subheading != blank %}
                <div class="sub-heading _2">{{ section.settings.subheading }}</div>
              {% endif %}
                <div class="benefits_inner">
                  {% for block in section.blocks %}
                    <div class="banner_sec">
                    {% if block.settings.video_url != blank %}
                        <video playsinline="" autoplay="" muted="" loop="" src="{{ block.settings.video_url }}"></video>
                    {% endif %}  
                        <div class="text_box_beni">
                    {% if block.settings.heading != blank %}
                            <h3 class="heading-6">{{ block.settings.heading }}</h3>
                    {% endif %}
                    {% if block.settings.subheading != blank %}
                            <p class="ba-para">{{ block.settings.subheading }}</p>
                    {% endif %}
                        </div>
                    </div>
                  {% endfor %} 
                </div>
              {% if section.settings.desktop_button_text != blank %}
                <div class="desktop_button">
                    <div class="button-div">
                        <a href="{{ section.settings.desktop_button_url }}" style="background-color:{{ section.settings.button_background_color }}; color:{{ section.settings.button_text_color }}" class="button-2 full-button w-inline-block">
                            <div class="text-block-4">{{ section.settings.desktop_button_text }}<span class="text-span-4">
                                    <i class="fa fa-arrow-circle-right bg-green" aria-hidden="true"></i>
                                </span>
                            </div>
                        </a>
                    </div>
                </div>
              {% endif %}
              {% if section.settings.mobile_button_text != blank %}
              <div class="mobile_button">
                <div class="button-div">
                    <a href="{{ section.settings.mobile_button_url }}" style="background-color:{{ section.settings.button_background_color }}; color:{{ section.settings.button_text_color }}" class="button-2 full-button w-inline-block">
                        <div class="text-block-4">{{ section.settings.mobile_button_text }} <span class="text-span-4">
                                <i class="fa fa-arrow-circle-right bg-green" aria-hidden="true"></i>
                            </span>
                        </div>
                    </a>
                </div>
              </div>
              {% endif %}
            </div>
        </div>
    </section>

{% schema %}
  {
    "name": "HeatLp Benefits Section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Subheading"
      },
      {
        "type": "text",
        "id": "desktop_button_text",
        "label": "Desktop Button Text"
      },
      {
        "type": "text",
        "id": "mobile_button_text",
        "label": "Mobile Button Text"
      },
      {
        "type": "url",
        "id": "desktop_button_url",
        "label": "Desktop Button Link"
      },
      {
        "type": "url",
        "id": "mobile_button_url",
        "label": "Mobile Button Link"
      },
      {
        "type": "color",
        "id": "button_background_color",
        "label": "Button Background Color"
      },
      {
        "type": "color",
        "id": "button_text_color",
        "label": "Button Text Color"
      }
    ],
     "blocks": [
     {
       "name": "Card",
       "type": "image",
       "settings": [
         {
           "type": "url",
           "id": "video_url",
           "label": "Video Url"
         },
         {
           "type":"text",
           "id": "heading",
           "label": "Heading"
         },
         {
           "type": "text",
           "id": "subheading",
           "label": "Subheading"
