<!-- announcment -->
    <section class="announcment_wrapper" style="background-color:{{ section.settings.background_color }}">
        <div class="container">
            <div class="announcment_bar">
              {% if section.settings.side_logo != blank %}
                <div class="announc_inner_left">
                    <img src="{{ section.settings.side_logo | img_url:'master' }}" alt="logo" />
                </div>
              {% endif %}
                <div class="announc_inner_right">
                    <div class="acc_icon_set">
                      {% for block in section.blocks %}
                        <div class="acc_inner">
                        {% if block.settings.right_logo != blank %}
                            <div class="logo_inner">
                                <img src="{{ block.settings.right_logo | img_url:'master' }}" alt="logo" />
                            </div>
                        {% endif %}
                        {% if block.settings.logo_text != blank %}
                            <div class="acc_inner_text">
                              <h4 style="color:{{ block.settings.logo_text_color }}">{{ block.settings.logo_text }}</h4>
                            </div>
                        {% endif %}
                        </div>
                      {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </section>
  <!-- announcment -->
  
{% schema %}
  {
    "name": "Header",
    "settings": [
      {
        "type": "image_picker",
        "id": "side_logo",
        "label": "Announement Bar Side Logo"
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "Background Color"
      }
    ],
    "blocks": [
     {
       "name": "Add Logo",
       "type": "logo",
       "settings": [
         {
           "type": "image_picker",
           "id": "right_logo",
           "label": "Logo"
         },
         {
           "type":"text",
           "id": "logo_text",
           "label": "Heading"
         },
         {
           "type": "color",
           "id": "logo_text_color",
           "label": "Text Color"
         }
       ]
     }
  ]
  }
{% endschema %}
