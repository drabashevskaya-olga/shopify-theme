{{ 'slider-testimonial.css' | asset_url | stylesheet_tag }}

<section class="testimonial-silder-section">
  <div class="page-width">
    <div class="testimonial-silder-warpper">
    	<div class="testimonial-slider carousel" data-flickity='{ "freeScroll": true, "pageDots": false }'>
         
           {% for block in section.blocks %}
          <div class="main-box-testimonial carousel-cell">
          <div class="slider-image-testimonial-face">
          	<img src="{{ block.settings.image | img_url: 'master'}}">
          </div>
          <div class="slider-data-testimonial">
            <h5>{{ block.settings.rich_description }}</h5>
            <h2>{{ block.settings.heading }}</h2>
            {{ block.settings.description }}
            <a href="{{ block.settings.button_url }}" class="read-more-btn">{{ block.settings.button_label }}</a>
          </div>
          </div>
      {% endfor %}

      </div>
    </div>
  </div>
</section>

