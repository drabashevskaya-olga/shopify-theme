<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
var currstep = $(".step").attr("data-step");
if (currstep == 'shipping_method') {
  
    // for usa 
    var finaladdress = $(".address.address.address--tight").html().trim().toLowerCase();
    var shiporesult1 = finaladdress.includes("united states");
    if (shiporesult1 == true) {
        $(".content-box__row").each(function() {
            var shiptitle = $(this).find(".radio__label__primary").attr("data-shipping-method-label-title");
            if (typeof(shiptitle) != "undefined") {
                var res = shiptitle.includes("Christmas");
                if (res == true) {
                    $(this).find(".radio__input input").trigger("click");
                }
            }
        });
    }

    // for canada 
    var finaladdress = $(".address.address.address--tight").html().trim().toLowerCase();
    var shiporesult1 = finaladdress.includes("canada");
    if (shiporesult1 == true) {
        $(".content-box__row").each(function() {
            var shiptitle = $(this).find(".radio__label__primary").attr("data-shipping-method-label-title");
            if (typeof(shiptitle) != "undefined") {
                var res = shiptitle.includes("Canada");
                if (res == true) {
                    $(this).find(".radio__input input").trigger("click");
                }
            }
        });
    }



}
</script>
