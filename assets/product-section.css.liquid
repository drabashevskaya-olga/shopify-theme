  .page-daily-wellness .main-product-section {
    margin: 50px 0;
  }
  .page-daily-wellness .main-title-warpper h2 {
    max-width: 630px;
    font-size: 32px;
  }
  .main-title-warpper {
    margin-bottom: 40px;
  }
  .products-grid-image img {
    width: 100%;
    height: auto;
  }
