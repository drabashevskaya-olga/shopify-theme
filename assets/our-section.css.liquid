.our-main-heading {
  margin-bottom: 90px;
}

.our-main-heading h2 {
  margin: 0;
  font-size: 56px;
  line-height: 100%;
  text-transform: uppercase;
}
.our-data-wapper {
    display: flex;
    flex-wrap: wrap;
    align-items: flex-start;
    width: 80%;
    margin-left: 100px;
    margin-right: auto;
}
.our-data-wapper .our-data-item {
	width: 50%;
    text-align: center;
    padding: 0 63px;
    margin-bottom: 60px;
}
.our-data-wapper .our-data-item p {
    font-size: 26px;
    line-height: 33.8px;
    letter-spacing: 1px;
    margin: 0;
    color: #6E6E73;
}
.our-data-wapper .our-data-item h3 {
    margin-top: 24px;
    margin-bottom: 0px;
    font-size: 34px;
    line-height: 44px;
}
.our-data-wapper .our-data-item img {
    display: block;
    text-align: center;
    margin: 0 auto;
}

@media only screen and (max-width: 767px) {
  .our-data-wapper {
    width: 100%;
    margin-left: 0px;
    display: block;
  }
  .our-data-wapper .our-data-item {
    width: 100% !important;
    padding: 0px;
  }
}